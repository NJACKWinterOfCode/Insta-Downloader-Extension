{
    "name": "Instagram Downloader",
    "version": "0.1.3",
    "manifest_version": 2,
    "description": "Injects download buttons to Instagram Media",
    "homepage_url": "http://git.io/arathi",
    "content_scripts": [
        {
          "matches": ["*://*.instagram.com/*"],
          "js": ["download.js"]
        }
    ],

    "icons": {
      "48": "img/icon-48x48.png",
      "96": "img/icon-96x96.png"
    },

    "browser_action": {
        "default_title": "Instagram Downloader"
    },

    "web_accessible_resources": [
        "insta-down-css.css"
    ],

    "permissions": [
        "storage",
        "tabs",
        "https://www.instagram.com/"
    ]
}
